<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventoDetailsLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/roteiroDetailsAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarEventoDetails"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:id="@+id/toolbarEventoDetailsRelativeLayout"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_width="210dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nomeEventoEventoDetailsTextView"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/title_activity_roteiro_details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/excluirEventoDetailsActivityImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_delete_2" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/editarEventoDetailsActivityImageView"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_edit"/>

                <ImageView
                    android:id="@+id/responderSimConviteDetailsActivityImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/responderNaoConviteDetailsActivityImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_refuse"
                    android:visibility="gone" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="@dimen/padding_geral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criador: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/criadorEventoEventoDetailsTextView"
                    android:text="someone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:text="Data: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:id="@+id/dataEventoEventoDetailsTextView"
                    android:text="27/02/2018"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:text="InÃ­cio: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:id="@+id/horaInicioEventoEventoDetailsTextView"
                    android:text="23:59"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:text="Fim: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_geral"
                    android:id="@+id/horaFimEventoEventoDetailsTextView"
                    android:text="00:00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/cardRoteiroEventoDetailsLinearLayout"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imagemRoteiroEventoDetailsImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/background_imagem_new"
                    android:padding="@dimen/padding_geral"
                    android:layout_marginEnd="10dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/cor_prata"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nomeRoteiroEventoDetailsTextView"
                        android:textSize="@dimen/textSizeListas"
                        android:text="qwert"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipoRoteiroEventoDetailsTextView"
                        android:text="tipo"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/roteiroEventoDetailsRatingBar"
                        android:rating="5"
                        android:progressTint="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/listaConvidadosEventoDetailsFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
