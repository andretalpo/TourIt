<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/roteiroViewHolderLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagemRoteiroViewHolderImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/background_imagem_new"
        android:padding="@dimen/padding_geral"
        android:layout_marginEnd="10dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeRoteiroViewHolderTextView"
        android:layout_toEndOf="@id/imagemRoteiroViewHolderImageView"
        android:text="qwert"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipoRoteiroViewHolderTextView"
        android:text="tipo"
        android:layout_toEndOf="@id/imagemRoteiroViewHolderImageView"
        android:layout_below="@id/nomeRoteiroViewHolderTextView"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:id="@+id/roteiroViewHolderRatingBar"
        android:rating="5"
        android:progressTint="@color/cor_dourado"
        android:layout_toEndOf="@id/imagemRoteiroViewHolderImageView"
        android:layout_below="@id/tipoRoteiroViewHolderTextView"/>

</RelativeLayout>