<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pesquisaUsuarioViewHolderImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/padding_geral"
        android:layout_centerVertical="true"
        android:src="@drawable/background_imagem_new"
        android:padding="@dimen/padding_geral"
        android:layout_marginEnd="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/cor_prata" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pesquisaUsuarioViewHolderImageView"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_geral"
            android:id="@+id/pesquisaUsuarioViewHolderTextView"
            android:text="Miojo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pesquisaUsuarioViewHolderTextView"
            android:layout_margin="@dimen/padding_geral"
            android:id="@+id/pesquisaUsuarioUsernameViewHolderTextView"
            android:text="Kirlian" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesquisaUsuarioAdicionarViewHolderButton"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_3"
        android:layout_margin="@dimen/padding_geral"
        android:tint="@color/colorPrimary"/>
</RelativeLayout>