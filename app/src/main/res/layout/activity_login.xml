<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="br.com.marcus.fernanda.andre.tourit.login.controller.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fundo_login"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/touritImageViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginBotaoCriarUsuario"
        android:src="@drawable/ic_tourit" />

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordas_botao"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/logo_google_x32"
        android:elevation="@dimen/elevation_geral"
        android:gravity="center"
        android:paddingStart="@dimen/paddingLeftBotaoLogin"
        android:paddingEnd="@dimen/paddingLateralBotao"
        android:text="@string/login"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="@dimen/tamanhoFonteBotaoCriarUsuario"
        android:textStyle="bold" />

</RelativeLayout>
