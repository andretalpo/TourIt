<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewHolderEventoRelativeLayout"
    android:background="@drawable/card_background"
    android:padding="4dp"
    android:elevation="5dp"
    android:layout_margin="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagemRoteiroEventoViewHolderImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/background_imagem_new"
        android:padding="@dimen/padding_geral"
        android:layout_marginEnd="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/cor_prata" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagemRoteiroEventoViewHolderImageView"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="André foi andar no bosque"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingStart="2dp"
            android:id="@+id/nomeEventoViewHolderTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pois é"
            android:padding="2dp"
            android:id="@+id/nomeRoteiroEventoViewHolderTextView"
            android:layout_below="@id/nomeEventoViewHolderTextView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_below="@id/nomeRoteiroEventoViewHolderTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27/02/2018 - 08:00 a 20:00"
                android:id="@+id/dataEventoViewHolder"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>