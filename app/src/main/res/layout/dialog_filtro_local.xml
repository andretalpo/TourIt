<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:padding="20dp">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/distancia"
        android:layout_alignParentEnd="true"
        android:id="@+id/distanciaSwitchDialogFiltro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:text="15 Km"
        android:layout_below="@id/distanciaSwitchDialogFiltro"
        android:id="@+id/distanciaLabelTextView"/>

    <SeekBar
        android:id="@+id/distanciaSeekBarDialogFiltro"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/distanciaLabelTextView"
        android:layout_height="wrap_content"
        android:layout_below="@id/distanciaSwitchDialogFiltro"
        android:max="30000"
        android:progress="15000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/distanciaSeekBarDialogFiltro"
        android:id="@+id/abertoSwitchDialogFiltro"
        android:text="@string/aberto_agora" />

</RelativeLayout>